  /* General Styles */
  .container {
    max-width: 800px;
    margin: 2rem auto;
    padding: 1rem;
    background-color: #faf8f8fb;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  h1, h2 {
